<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_item_left"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/chat_pic_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:src="@drawable/testperson"
        android:contentDescription="other_pic"
        />

    <TextView
        android:id="@+id/tv_other_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chat_pic_left"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/app_lvjian_other_chat_background"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:textColor="#4C4A4A"
        android:layout_toEndOf="@+id/chat_pic_left"
        android:text="AS真的傻逼！！"
        />
</RelativeLayout>