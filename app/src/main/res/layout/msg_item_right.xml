<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/msg_item_right_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_my_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@+id/chat_pic_right"
        android:layout_toLeftOf="@+id/chat_pic_right"
        android:background="@drawable/app_lvjian_chat_right"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:text="AS真的傻逼！！"
        android:textColor="#4C4A4A" />

    <ImageView
        android:id="@+id/chat_pic_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="top"
        android:src="@drawable/testperson" />

</RelativeLayout>